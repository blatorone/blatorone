                <width>14-col</width>
                <height>2-row</height>
                <texture>masks/discsurface.png</texture>
                <colordiffuse>$VAR[highlight]</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <!--title-->
