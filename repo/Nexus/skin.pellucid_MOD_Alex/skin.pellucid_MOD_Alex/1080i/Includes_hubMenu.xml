<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!--main hub menu-->
    <include name="hubMenu">
		<control type="image">
            <include>dimensionsFullscreen</include>
            <texture>colors/black.png</texture>
            <colordiffuse>d5FFFFFF</colordiffuse>
            <aspectratio>stretch</aspectratio>
			<animation type="Conditional" condition="controlgroup(9000).hasfocus">
                <effect type="fade" start="0" end="1000" time="200"/>
            </animation>
            <animation type="Conditional" condition="!controlgroup(9000).hasfocus">
                <effect type="fade" start="1000" end="0" time="100"/>
            </animation>
            
        </control>
        <control type="group" id="9000">
            <animation type="windowopen">
                <effect type="slide" start="-1084" end="0" tween="sine" delay="500" time="400"/>
            </animation>
			<animation type="windowclose">
                <effect type="fade" start="100" end="0" time="0"/>
            </animation>
            
            <animation type="Conditional" condition="!controlgroup(9000).hasfocus">
                <effect type="slide" start="0" end="-1084" tween="sine" time="400"/>
            </animation>
            
            <control type="image">
                <visible>!window.isactive(1130)</visible>
                <posx>-200</posx>
                <posy>-200</posy>
                <width>584</width>
                <height>1500</height>
                <texture>colors/listselect_fo.png</texture>
                <colordiffuse>$VAR[highlight]</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <!--logo-->
			<control type="group">
                <visible>!window.isactive(1130)</visible>
				<posx>col-1-begin</posx>
                <posy>row-2-begin</posy>
	            <control type="label">
	                <posx>0</posx>
	                <posy>-12</posy>
	                <width>73</width>
	                <height>73</height>
	                <font>symbolVeryLarge</font>
	                <aligny>center</aligny>
	                <textcolor>$VAR[Home]</textcolor>
	                <label>$VAR[menuLogo]</label>
	            </control>
               
                
			</control>
            
            <control type="grouplist" id="500">
            <posy>row-5-begin</posy>
            <ondown>setfocus(9001,0)</ondown>
                <onup>setfocus(9001,20)</onup>
                <onright>9999</onright>
                <onleft condition="!window.isactive(home)">activateWindow(contextmenu)</onleft>
                <control type="button" id="501">
                <focusedcolor>$VAR[selected]</focusedcolor>
                <textcolor>$VAR[Home]</textcolor>
                <texturefocus colordiffuse="$VAR[highlight]">Colors/white.png</texturefocus>
                <alttexturefocus colordiffuse="$VAR[highlight]">Colors/white.png</alttexturefocus>
                <align>center</align>
                <aligny>center</aligny>
                <width>383</width>
				<textwidth>383</textwidth>
                <label>$INFO[Container.Viewmode,$LOCALIZE[31306] ]</label>
                <onclick>activateWindow(1130)</onclick>
                <visible>Container.Content(videos) + !window.isactive(1130) | container.Content(movies) + !window.isactive(1130) | container.Content(tvshows) + !window.isactive(1130) | container.content(seasons) + !window.isactive(1130) | Container.Content(episodes) + !window.isactive(1130)</visible>
            </control>
            
            <control type="button" id="2">
                <focusedcolor>$VAR[selected]</focusedcolor>
                <textcolor>$VAR[Home]</textcolor>
                <textwidth>383</textwidth>
                <texturefocus colordiffuse="$VAR[highlight]">Colors/white.png</texturefocus>
                <texturenofocus>$VAR[selected]</texturenofocus>
                <alttexturefocus colordiffuse="$VAR[highlight]">Colors/white.png</alttexturefocus>
                <align>center</align>
                <aligny>center</aligny>
                <width>383</width>
                <visible>[Container.Content(addons)  + !window.isactive(1130) | Container.Content(albums)  + !window.isactive(1130) | Container.Content(songs)  + !window.isactive(1130) | Container.Content(artists)  + !window.isactive(1130) | Container.Content(genres)  + !window.isactive(1130) | Container.Content(years)  + !window.isactive(1130) | Window.IsActive(pictures)  + !window.isactive(1130) | Container.Content(files)] + !Skin.HasSetting(Disable.ShowCaseView)  + !window.isactive(1130) | window.IsActive(AddonBrowser) + !window.isactive(1130)</visible>
            </control>
             
             <control type="button" id="3">
                <focusedcolor>$VAR[selected]</focusedcolor>
                <textcolor>$VAR[Home]</textcolor>
			    <description>Sort by button</description>
			    <texturefocus colordiffuse="$VAR[highlight]">Colors/white.png</texturefocus>
                <texturenofocus>$VAR[selected]</texturenofocus>
                <alttexturefocus colordiffuse="$VAR[highlight]">Colors/white.png</alttexturefocus>
                <align>center</align>
                <aligny>center</aligny>
                <width>383</width>
				<textwidth>383</textwidth>
			    <label>103</label>
		    </control>
		    <control type="togglebutton" id="4">
                <focusedcolor>$VAR[selected]</focusedcolor>
                <textcolor>$VAR[Home]</textcolor>
			    <description>Sort asc</description>
			    <texturefocus colordiffuse="$VAR[highlight]">Colors/white.png</texturefocus>
                <texturenofocus>textActive</texturenofocus>
                <alttexturefocus colordiffuse="$VAR[highlight]">Colors/white.png</alttexturefocus>
                <align>center</align>
                <aligny>center</aligny>
                <width>383</width>
				<textwidth>383</textwidth>
			    <label>31110</label>
			    <altlabel>31109</altlabel>
			    <usealttexture>Container.SortDirection(Ascending)</usealttexture>
		    </control>
            </control>
            
            
            
            <control type="list" id="9001">
             <visible>!window.isactive(1130)</visible>

                <posx>-23</posx>
                <posy>row-12-begin</posy>
                <width>406</width>
                <height>832</height>
                <orientation>vertical</orientation>
                <onleft condition="!window.isactive(home)">activateWindow(contextmenu)</onleft>
                <onright>9999</onright>
                <ondown condition="control.Isvisible(501)">501</ondown>
                <ondown condition="!control.Isvisible(501)">2</ondown>
                <onup condition="control.Isvisible(501)">4</onup>
                <onup condition="!control.Isvisible(501)">4</onup>
                <itemlayout width="col-5-begin" height="2-row">
                    <control type="label">
                        <posx>col-1-begin</posx>
                        <posy>0</posy>
                        <width>4-col-gutter</width>
                        <height>2-row</height>
                        <font>menuTitle2</font>
                        <aligny>center</aligny>
                        <textcolor>$VAR[Home]</textcolor>
                        <shadowcolor></shadowcolor>
                        <label>[CAPITALIZE]$INFO[ListItem.label][/CAPITALIZE]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="col-5-begin" height="2-row">
					<control type="image">
                        <visible>!window.isactive(contextmenu) + !control.hasfocus(501) + !control.hasfocus(2) + !control.hasfocus(3) + !control.hasfocus(4)</visible>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>406</width>
                        <height>2-row</height>
                        <texture condition="!control.hasfocus(501) | control.hasfocus(2) | !control.hasfocus(3) | !control.hasfocus(4)" colordiffuse="$VAR[highlight]">Colors/white.png</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="label">
                        <visible>!window.isactive(contextmenu) + !control.hasfocus(501) + !control.hasfocus(2) + !control.hasfocus(3) + !control.hasfocus(4)</visible>
                        <posx>col-1-begin</posx>
                        <posy>0</posy>
                        <width>4-col-gutter</width>
                        <height>2-row</height>
                        <font>menuTitle2</font>
                        <aligny>center</aligny>
                        <textcolor>$VAR[selected]</textcolor>
                        <shadowcolor></shadowcolor>
                        <label>[CAPITALIZE]$INFO[ListItem.label][/CAPITALIZE]</label>
                    </control>
                    <control type="label">
                        <visible>control.hasfocus(501) | window.isactive(contextmenu) | control.hasfocus(2) | control.hasfocus(3) | control.hasfocus(4)</visible>
                        <posx>col-1-begin</posx>
                        <posy>0</posy>
                        <width>4-col-gutter</width>
                        <height>2-row</height>
                        <font>menuTitle2</font>
                        <aligny>center</aligny>
                        <textcolor>$VAR[Home]</textcolor>
                        <shadowcolor></shadowcolor>
                        <label>[CAPITALIZE]$INFO[ListItem.label][/CAPITALIZE]</label>
                    </control>
                </focusedlayout>
                <content>
                    <include condition="window.isactive(games)">skinshortcuts-group-gamesubmenu</include>
					<include condition="window.isactive(pictures)">skinshortcuts-group-picturessubmenu</include>
                    <include condition="String.Contains(container.folderpath,videodb://musicvideos/titles) | window.isactive(music) | window.isactive(radiochannels) | window.isactive(radioguide) | window.isactive(radiorecordings) | window.isactive(radiotimers) | window.isactive(musicplaylist)">skinshortcuts-group-musicsubmenu</include>
                    <include condition="[window.isactive(videos) + !String.Contains(container.folderpath,videodb://musicvideos/titles)] | window.isactive(tvchannels) | window.isactive(tvrecordings) | window.isactive(tvguide) | window.isactive(tvtimers) | window.isactive(videoplaylist)">skinshortcuts-group-videosubmenu</include>
                </content>
            </control>
            <control type="button" id="3000">
                <posx>384</posx>
                <posy>500</posy>
                <textwidth>250</textwidth>
                <font>symbolLarge</font>
                <align>center</align>
                <aligny>center</aligny>
                <width>1-col</width>
                <label></label>
                <label2></label2>
                <textcolor>$VAR[selected]</textcolor>
                <focusedcolor>$VAR[selected]</focusedcolor>
                <texturefocus colordiffuse="$VAR[highlight]">Colors/listselect_fo.png</texturefocus>
                <texturenofocus colordiffuse="$VAR[highlight]">Colors/listselect_fo.png</texturenofocus>
                <onclick>setfocus(9999)</onclick>
                <visible>skin.hassetting(Touch) + !window.isactive(1132) + [control.hasfocus(500) | control.hasfocus(9001)] | skin.hassetting(Touch) + !window.isactive(MyMusicNav)</visible>
            </control>
            
           <include content="keyboard select">
                        <param name="posx">30%</param>
                        <param name="focus">9001</param>
                        <param name="up">up</param>
                        <param name="down">down</param>
                        <param name="left">left</param>
                        <param name="right">right</param>
                        <param name="select">select</param>
                        
                        <param name="back">back</param>
            </include>
        </control>
         
    </include>
    
</includes>
