<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9999</defaultcontrol>
    <include>fadeInOut</include>
    <onload>Skin.SetString(recentitems,music)</onload>
	<views>50,51,52,53,54,55,56,57,59,500,501,502,503,504,505,506,507,508,509,591,602,603</views>
    <controls>
        <include>globalBackground</include>
		<control type="group">
            <visible>$EXP[isMusicSong]</visible>
            <control type="image">
                <include>dimensionsFullscreen</include>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <texture background="true" fallback="backgroundimage.png" border="0">$INFO[Container.Art(artist.fanart)]</texture>
				<fadetime>500</fadetime>
                <colordiffuse>55ffffff</colordiffuse>
            </control>
            <control type="image">
                <texture>vignette.png</texture>
                <colordiffuse>ffffffff</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
        </control>
        <!--Battery Level-->
        <include>Battery</include>
        <!--Backbutton touchscreen-->
        <include>Backbuttoncross</include>
        <include content="keyboard select">
            <param name="posx">87%</param>
            <param name="focus">9999</param>
            <param name="up">up</param>
            <param name="down">down</param>
            <param name="left">left</param>
            <param name="right">right</param>
            <param name="select">select</param>
            <param name="back">back</param>
        </include>
        <!--page container group-->
        <control type="group">
            <!--shift page for certain modal dialogs-->
            <include>modalDialogContentShift</include>
            <!--Main content listing-->
            <control type="group" id="9999">
                <include>contentOpen</include>
                <!--source content-->
                <control type="group" id="9500">
                    <include>View_50_List</include>
                    <include>View_51_InfoWall</include>
                    <include>View_52_Landscape</include>
                    <include>View_53_ShowCase</include>
                    <include>View_54_ShowCase</include>
                    <include>View_55_TriPanel</include>
                    <include>View_56_Posters</include>
                    <include>View_57_Shift</include>
                    <include>View_58_BannerWall</include>
                    <include>View_59_Logo</include>
                    <include>View_500_Icons</include>
                    <include>View_501_LowList</include>
                    <include>View_502_Episode</include>
                    <include>View_503_Wall</include>
                    <include>View_504_Gallery</include>
                    <include>View_505_Panel</include>
                    <include>View_506_RightList</include>
                    <include>View_507_BigList</include>
                    <include>View_508_SongList</include>
                    <include>View_509_MyFlix</include>
                    <include>View_591_BigFan</include>
                    <include>View_602_FanartList</include>
                    <include>View_603_Music_JukeBox</include>
                    <include>View_609_Fullscreen_Wall</include>
                </control>

                <control type="group">
			<visible>Control.IsVisible(54) | Control.IsVisible(52) | Control.IsVisible(500) | Control.IsVisible(503) | Control.IsVisible(57)</visible>
			<visible>!Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<top>-30</top>
			<control type="group">
				<visible>Control.IsVisible(54) | Control.IsVisible(52) | [Control.IsVisible(503) + Skin.HasSetting(Enable.Wall.AlbumLabels)]</visible>
				<control type="group">
					<left>410</left>
					<top>1010</top>
                    <control type="image">
                    			<posx>-450</posx>
                    			<posy>-3</posy>
                    			<width>fullscreenwidth</width>
                    			<height>136</height>
                    			<texture>colors/listselect_fo.png</texture>
                    			<colordiffuse>$VAR[highlight]</colordiffuse>
                    			<aspectratio>stretch</aspectratio>
                			</control>
							<control type="image">
                    			<posx>-450</posx>
                    			<posy>-3</posy>
                    			<width>fullscreenwidth</width>
                    			<height>136</height>
                    			<texture>colors/listselect_fo.png</texture>
                    			<colordiffuse>$VAR[highlight]</colordiffuse>
                    			<aspectratio>stretch</aspectratio>
                			</control>
					<control type="label">
						<width>1100</width>
						<height>48</height>
						<align>center</align>
						<font>menuTitle2</font>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textoffsetx>30</textoffsetx>
					</control>
					<control type="label">
						<top>45</top>
						<width>1100</width>
						<height>30</height>
						<align>center</align>
						<font>menuTitle2</font>
						<label>$VAR[FloorLabel2Var]</label>
						<textoffsetx>30</textoffsetx>
					</control>
				</control>
				<control type="group">
					<top>1010</top>
					<width>100%</width>
					<visible>[Container.Content(albums) | Container.Content(songs)]</visible>
					<control type="group">
						<left>120</left>
						<control type="label">
							<left>-10</left>
							<width>155</width>
							<height>90</height>
							<align>center</align>
							<label>$INFO[ListItem.Year]</label>
							<font>menuTitle2</font>
							<wrapmultiline>true</wrapmultiline>
						</control>
					</control>
					<control type="image">
						<left>1600</left>
						<colordiffuse>white</colordiffuse>
						<width>200</width>
						<fadetime>50</fadetime>
						<include>MediaFlagValues</include>
						<texture fallback="flags/rating/empty.png">$INFO[ListItem.UserRating,flags/rating/,.png]</texture>
					</control>
				</control>
			</control>
			<control type="group">
				<visible>Control.IsVisible(500) | Control.IsVisible(57) + ![Container.Content(genres) + !Skin.HasSetting(Enable.Shift.GenreLabels)]</visible>
				<animation effect="slide" start="0" end="40" condition="Control.IsVisible(57)">Conditional</animation>
				<include>ViewAnimation</include>
				<control type="group">
					<left>90</left>
					<top>1010</top>
					<control type="label">
						<width>1150</width>
						<height>48</height>
						<font>regular</font>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textoffsetx>30</textoffsetx>
					</control>
					<control type="label">
						<top>45</top>
						<width>1100</width>
						<height>30</height>
						<font>regular</font>
						<label>$VAR[FloorLabel2Var]</label>
						<textoffsetx>30</textoffsetx>
					</control>
				</control>
				<control type="grouplist">
					<top>1000</top>
					<width>1840</width>
					<height>90</height>
					<align>right</align>
					<orientation>horizontal</orientation>
					<visible>Container.Content(albums) | Container.Content(songs)</visible>
					
					<control type="label">
						<width>198</width>
						<height>90</height>
						<align>center</align>
						<label fallback="• • • •">$INFO[ListItem.Year]</label>
						<font>regular</font>
						<wrapmultiline>true</wrapmultiline>
					</control>
				</control>
			</control>
		</control>


                <control type="button" id="3000">
                <posx>0</posx>
                <posy>500</posy>
                <textwidth>352</textwidth>
                <font>symbolLarge</font>
                <align>center</align>
                <aligny>center</aligny>
                <width>1-col</width>
                <label></label>
                <label2></label2>
                <textcolor>black</textcolor>
                <focusedcolor>black</focusedcolor>
                <texturefocus colordiffuse="$VAR[highlight]">Colors/listselect_fo.png</texturefocus>
                <texturenofocus colordiffuse="$VAR[highlight]">Colors/listselect_fo.png</texturenofocus>
                <onclick>setfocus(9000)</onclick>
                <visible>skin.hassetting(Touch)  + !window.isactive(1130)</visible>
            </control>
            <include content="keyboard select">
                    <param name="posx">87%</param>
                    <param name="focus">9999</param>
                    <param name="up">up</param>
                    <param name="down">down</param>
                    <param name="left">left</param>
                    <param name="right">right</param>
                    <param name="select">select</param>
                    <param name="back">back</param>
                </include>
            </control>
            <!--page scrollbar-->
            <control type="group" id="8000">
                <visible>Control.IsVisible(60)</visible>
                <animation effect="fade" start="100" end="0" time="100" condition="!controlgroup(8000).hasfocus">conditional</animation>
                <control type="scrollbar" id="60">
                    <posx>54r</posx>
                    <posy>row-8-begin</posy>
                    <height>17-row</height>
                    <onleft>9999</onleft>
                    <onback>9999</onback>
                    <onright>7000</onright>
                    <onup>7000</onup>
                </control>
            </control>
            <!--page header-->
            <control type="group">
				<include>pageHeader</include>    
            </control>
        </control>
        <!--mini window-->
        <include>miniVideoPlayer</include>
        <!--hub menu-->
        <include>hubMenu</include>
        <!--loading indicator-->
        <include>loadingIndicator</include>

        
                    
        <!--debugging-->
        <include>DebugGrid</include>
        <control type="label">
            <include>WindowID</include>
            <label>MyMusicNav.xml path: $INFO[container.folderpath]   name: $INFO[container.foldername]   content: $INFO[container.content]    Control: $INFO[System.CurrentControl]</label>
        </control>
    </controls>
</window>
