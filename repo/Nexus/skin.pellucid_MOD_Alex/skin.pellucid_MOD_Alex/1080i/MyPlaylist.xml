<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9500</defaultcontrol>
    <onload condition="Skin.hassetting(stopVideoOnMenu) + !Player.HasAudio">PlayerControl(stop)</onload>
    <include>fadeInOut</include>
	<views>50,51,52,53,54,55,56,57,59,500,501,502,503,504,505,506,507,508,509,591,602,603</views>
    <controls>
        <include>globalBackground</include>
        <!--fanart-->
        
        <control type="group">
            <!--fanart-->
            <control type="image">
						
			    		<include>ViewAnimation</include>
	            		<include>dimensionsFullscreen</include>
	            		<texture fallback="backgroundimage.jpg">$INFO[listitem.thumb]</texture>
	            		<colordiffuse>FF555555</colordiffuse>
	            		<aspectratio>scale</aspectratio>
						<fadetime>250</fadetime>
	        </control>
            <!--Battery Level-->
            <include>Battery</include>
            <!--Backbutton touchscreen-->
            <include>Backbuttoncross</include>
            <include content="keyboard select">
                <param name="focus">9999</param>
                <param name="up">up</param>
                <param name="down">down</param>
                <param name="left">left</param>
                <param name="right">right</param>
                <param name="select">select</param>
            </include>
            <control type="image">
                <texture>vignette.png</texture>
                <colordiffuse>ffffffff</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
        </control>
        <!--page container group-->
        <control type="group">
            <!--shift page for certain modal dialogs-->
            <include>modalDialogContentShift</include>
              <!--shift page for certain modal dialogs-->
            <include>modalDialogContentShift</include>
            <!--Main content listing-->
            <control type="group" id="9999">
                <include>contentOpen</include>
                <onright>setfocus(7000)</onright>
                <!--source content-->
                
                    <control type="group" id="9500">
                    <include>View_502_Episode</include>
                    
                    </control>
                    <control type="button" id="3000">
                <posx>0</posx>
                <posy>500</posy>
                <textwidth>352</textwidth>
                <font>symbolLarge</font>
                <align>center</align>
                <aligny>center</aligny>
                <width>1-col</width>
                <label></label>
                <label2>ïŒ„</label2>
                <textcolor>black</textcolor>
                <focusedcolor>black</focusedcolor>
                <texturefocus colordiffuse="$VAR[highlight]">Colors/white.png</texturefocus>
                <texturenofocus colordiffuse="$VAR[highlight]">Colors/white.png</texturenofocus>
                <onclick>setfocus(9000)</onclick>
                <visible>skin.hassetting(Touch)</visible>
            </control>
            </control>
            <!--page scrollbar-->
            <control type="group" id="8000">
                <visible>Control.IsVisible(61)</visible>
                <animation effect="fade" start="100" end="0" time="100" condition="!controlgroup(8000).hasfocus">conditional</animation>
                <control type="scrollbar" id="61">
                    <posx>54r</posx>
                    <posy>row-6-begin</posy>
                    <height>20-row</height>
                    <onleft>9999</onleft>
                    <onback>9999</onback>
                    <onright>7000</onright>
                    <onup>7000</onup>
                </control>
            </control>
			<!--page header-->
            <control type="group">
				<include>pageHeader</include>    
            </control>           
        </control>
        <!--mini window-->
        <include>miniVideoPlayer</include>
        <!--hub menu-->
        <include>hubMenu</include>
        <!--debugging-->
        <include>DebugGrid</include>
        <control type="label">
            <include>WindowID</include>
            <label>MyPlaylist.xml path: $INFO[container.folderpath]   name: $INFO[container.foldername]   content: $INFO[container.content]    Control: $INFO[System.CurrentControl]</label>
        </control>
    </controls>
</window>
